{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types/declarations"]
  },
  "include": ["./*.ts", "./src/**/*.ts", "./src/types/declarations/*.d.ts"],
  "exclude": ["node_modules", "dist"]
} 